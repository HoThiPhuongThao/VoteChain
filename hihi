  const handleVote = (eventId, optionId, isPublic) => { 
        if (!walletAddress) {
    alert('B·∫°n c·∫ßn k·∫øt n·ªëi v√≠ tr∆∞·ªõc khi b√¨nh ch·ªçn!');
