  const [walletAddress, setWalletAddress] = useState(null);

 const connectWallet = async () => {
  const provider = window.sui;

  if (!provider) {
    alert('Vui l√≤ng c√†i v√≠ Sui (Slush / Sui Wallet / Nightly)');
    return;
  }

  try {
    const accounts = await provider.requestAccounts();
    const addr = accounts?.[0];

    if (!addr) {
      alert('Kh√¥ng l·∫•y ƒë∆∞·ª£c ƒë·ªãa ch·ªâ v√≠');
      return;
    }

    setWalletAddress(addr);
    console.log('Wallet connected:', addr);
  } catch (e) {
    console.error(e);
    alert('K·∫øt n·ªëi v√≠ th·∫•t b·∫°i');
  }
};
    const disconnectWallet = () => {
  setWalletAddress(null);
};



  const [users, setUsers] = useState([ 

    { id: 1, username: 'user1', password: '123456' }, 

    { id: 2, username: 'user2', password: '123456' } 

  ]); 

   

  const [publicEvents, setPublicEvents] = useState([ 

